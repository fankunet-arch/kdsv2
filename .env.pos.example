# TopTea POS System - Environment Configuration Template
# IMPORTANT: Copy this file to .env.pos and configure with actual values

# Database Configuration (Shared with KDS)
DB_HOST=your_database_host
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Europe/Madrid

# Session Configuration
SESSION_LIFETIME=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_NAME=POS_SESSION

# Security
CSRF_TOKEN_EXPIRY=3600
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Logging
LOG_LEVEL=WARNING
LOG_PATH=/home/user/kdsv2/storage/logs/pos/

# POS Specific Settings
POS_SHIFT_TIMEOUT=28800
POS_EOD_CUTOFF_HOUR=3
